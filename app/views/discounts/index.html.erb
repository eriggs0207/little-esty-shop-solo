<h3><%= @merchant.name %> Bulk Discounts </h3>

<%= button_to "Create a New Discount", new_merchant_discount_path(@merchant) , method: :get %>

<% @merchant.discounts.each do |discount| %>
  <div id="discount-<%= discount.id %>">
    <p><%= link_to "Discount #{discount.id}", merchant_discount_path(@merchant, discount) %></p>
    <p>discount: <%= discount.bulk_discount.round(2)%>% off</p>
    <p>item threshold: <%= discount.item_threshold %></p>
    <p><%= button_to "Delete #{discount.id}", merchant_discount_path(@merchant, discount) , method: :delete %></p>
  </div>
<% end %>

<div id="holidays-upcoming">
  <h5>Upcoming Holidays:</h5>
  <% @holidays.each do |holiday| %>
    <p><%= holiday.name %></p>
    <p><%= holiday.date %></p>
  <% end %>
</div>
